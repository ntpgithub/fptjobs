#ModalApplyJobForm.modal.fade(tabindex='-1', aria-hidden='true')
    .modal-dialog.modal-lg
        .modal-content.apply-job-form
            button.btn-close(type='button', data-bs-dismiss='modal', aria-label='Close')
            .modal-body.pl-30.pr-30.pt-50
                .text-center
                    p.font-sm.text-brand-2 Job Application 
                    h2.mt-10.mb-5.text-brand-1.text-capitalize Start your career today
                    p.font-sm.text-muted.mb-30 Please fill in your information and send it to the employer.                   
                form.login-register.text-start.mt-20.pb-30(action="#")
                    +inputWithLabel('input-1', 'Full Name *', 'text', 'fullname', 'Steven Job')
                    +inputWithLabel('input-2', 'Email *', 'email', 'emailaddress', 'stevenjob@gmail.com')
                    +inputWithLabel('number', 'Contact Number *', 'text', 'phone', '(+01) 234 567 89')
                    +inputWithLabel('des', 'Description', 'text', 'Description', 'Your description...')
                    .form-group
                        label.form-label(for='file') Upload Resume
                        input#file.form-control(name='resume', type="file")
                    .login_footer.form-group.d-flex.justify-content-between
                        label.cb-container
                            input(type='checkbox')
                            span.text-small Agree our terms and policy
                            span.checkmark
                        a.text-muted(href='page-contact.html') Lean more
                    .form-group
                        button.btn.btn-default.hover-up.w-100(type='submit', name='login') Apply Job
                    .text-muted.text-center Do you need support? 
                        a(href='page-contact.html') Contact Us
