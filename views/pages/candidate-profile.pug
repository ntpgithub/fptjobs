                                            label.font-sm.color-text-mutted.mb-10 Full Name *
                                            input.form-control(type="text", value="Steven Job")
                                        .form-group
                                            label.font-sm.color-text-mutted.mb-10 Email *
                                            input.form-control(type="text", value="stevenjob@gmail.com")
                                        .form-group
                                            label.font-sm.color-text-mutted.mb-10 Contact number
                                            input.form-control(type="text", value="01 - 234 567 89")
                                        .form-group
                                            label.font-sm.color-text-mutted.mb-10 Bio
                                            textarea.form-control(rows="4") We are AliThemes , a creative and dedicated group of individuals who love web development almost as much as we love our customers. We are passionate team with the mission for achieving the perfection in web design.
                                        .form-group
                                            label.font-sm.color-text-mutted.mb-10 Personal website
                                            input.form-control(type="url", value="https://alithemes.com")
                                        .row
                                            .col-lg-6
                                                .form-group
                                                    label.font-sm.color-text-mutted.mb-10 Country
                                                    input.form-control(type="text", value="United States")
                                            .col-lg-6
                                                .form-group
                                                    label.font-sm.color-text-mutted.mb-10 State
                                                    input.form-control(type="text", value="New York")
                                            .col-lg-6
                                                .form-group
                                                    label.font-sm.color-text-mutted.mb-10 City
                                                    input.form-control(type="text", value="Mcallen")
                                            .col-lg-6
                                                .form-group
                                                    label.font-sm.color-text-mutted.mb-10 Zip code
                                                    input.form-control(type="text", value="82356")
                                        .border-bottom.pt-10.pb-10.mb-30
                                        h6.color-orange.mb-20 Change your password
                                        .row
                                            .col-lg-6
                                                .form-group
                                                    label.font-sm.color-text-mutted.mb-10 Password
                                                    input.form-control(type="password", value="123456789")
                                            .col-lg-6
                                                .form-group
                                                    label.font-sm.color-text-mutted.mb-10 Re-Password *
                                                    input.form-control(type="password", value="123456789")
                                        .border-bottom.pt-10.pb-10
                                        .box-agree.mt-30
                                            label.lbl-agree.font-xs.color-text-paragraph-2
                                                input.lbl-checkbox(type="checkbox",value="1")
