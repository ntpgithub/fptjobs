extends ../layouts/master.pug

block title
    title Candidate Profile - Job Portal HTML Template 

block header
    include ../components/header.pug

block content
    section.section-box-2
        .container
            .banner-hero.banner-image-single
                img(src='assets/imgs/page/candidates/img.png', alt='jobbox')
                a.btn-editor(href="#")
            .box-company-profile
                .image-compay
                    img(src='assets/imgs/page/candidates/candidate-profile.png', alt='jobbox')
                .row.mt-10
                    .col-lg-8.col-md-12
                        h5.f-18
                            | Steven Jobs 
                            span.card-location.font-regular.ml-20 New York, US
                        p.mt-0.font-md.color-text-paragraph-2.mb-15
                            | UI/UX Designer. Front end Developer
                    .col-lg-4.col-md-12.text-lg-end
                        a.btn.btn-preview-icon.btn-apply.btn-apply-big(href='page-contact.html') Preview

            .border-bottom.pt-10.pb-10
    section.section-box.mt-50
        .container
            .row
                .col-lg-3.col-md-4.col-sm-12
                    .box-nav-tabs.nav-tavs-profile.mb-5
                        ul.nav(role='tablist')
                            li
                                a.btn.btn-border.aboutus-icon.mb-20.active(href='#tab-my-profile', data-bs-toggle='tab', role='tab', aria-controls='tab-my-profile', aria-selected='true') My Profile
                            li
                                a.btn.btn-border.recruitment-icon.mb-20(href='#tab-my-jobs', data-bs-toggle='tab', role='tab', aria-controls='tab-my-jobs', aria-selected='false') My Jobs
                            li
                                a.btn.btn-border.people-icon.mb-20(href='#tab-saved-jobs', data-bs-toggle='tab', role='tab', aria-controls='tab-saved-jobs', aria-selected='false') Saved Jobs
                        .border-bottom.pt-10.pb-10
                        .mt-20.mb-20
                            a.link-red(href='#') Delete Account
                .col-lg-9.col-md-8.col-sm-12.col-12.mb-50
