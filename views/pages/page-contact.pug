extends ../layouts/master.pug

block title
    title Jobbox - Job Portal HTML Template 

block header
    include ../components/header.pug

block content
    section.section-box
        .breacrumb-cover.bg-img-about
            .container
                .row
                    .col-lg-6
                        h2.mb-10 About Us
                        p.font-lg.color-text-paragraph-2 Get the latest news, updates and tips
                    .col-lg-6.text-lg-end
                        ul.breadcrumbs.mt-40
                            li
                                a.home-icon(href='#') Home
                            li Blog
    section.section-box.mt-80
        .container
            .box-info-contact
                .row
                    .col-lg-3.col-md-6.col-sm-12.mb-30
                        a(href='#')
                            img(src='assets/imgs/page/contact/logo.svg' , alt='joxBox')
                        .font-sm.color-text-paragraph
                            | 205 North Michigan Avenue, Suite 810 Chicago, 60601, USA
                            br
                            |  Phone: (123) 456-7890
                            br
                            |  Email: contact@jobbox.com
                        a.text-uppercase.color-brand-2.link-map(href='#') View map
                    .col-lg-3.col-md-6.col-sm-12.mb-30
                        h6 London
                        p.font-sm.color-text-paragraph.mb-20
                            | 2118 Thornridge Cir. Syracuse,
                            br.d-none.d-lg-block
                            |  Connecticut 35624
                        h6 New York
                        p.font-sm.color-text-paragraph.mb-20
                            | 4517 Washington Ave.
                            br.d-none.d-lg-block
                            |  Manchester, Kentucky 39495
                    .col-lg-3.col-md-6.col-sm-12.mb-30
                        h6 Chicago
                        p.font-sm.color-text-paragraph.mb-20
                            | 3891 Ranchview Dr. Richardson,
                            br.d-none.d-lg-block
                            |  California 62639
                        h6 San Francisco
                        p.font-sm.color-text-paragraph.mb-20
                            | 4140 Parker Rd. Allentown,
                            br.d-none.d-lg-block
                            |  New Mexico 31134
                    .col-lg-3.col-md-6.col-sm-12.mb-30
                        h6 Sysney
                        p.font-sm.color-text-paragraph.mb-20
                            | 3891 Ranchview Dr. Richardson,
                            br.d-none.d-lg-block
                            |  California 62639
                        h6 Singapore
                        p.font-sm.color-text-paragraph.mb-20
                            | 4140 Parker Rd. Allentown,
                            br.d-none.d-lg-block
                            |  New Mexico 31134
    section.section-box.mt-70
        .container
            .row
                .col-lg-8.mb-40
                    span.font-md.color-brand-2.mt-20.d-inline-block Contact us
                    h2.mt-5.mb-10 Get in touch
                    p.font-md.color-text-paragraph-2
                        | The right move at the right time saves your investment. live
                        br.d-none.d-lg-block
                        |  the dream of expanding your business.
                    form#contact-form.contact-form-style.mt-30(action='#', method='post')
                        .row.wow.animate__animated.animate__fadeInUp(data-wow-delay='.1s')
                            .col-lg-6.col-md-6
                                .input-style.mb-20
                                    input.font-sm.color-text-paragraph-2(name='name', placeholder='Enter your name', type='text')
                            .col-lg-6.col-md-6
                                .input-style.mb-20
                                    input.font-sm.color-text-paragraph-2(name='company', placeholder='Comapy (optioanl)', type='text')
                            .col-lg-6.col-md-6
                                .input-style.mb-20
                                    input.font-sm.color-text-paragraph-2(name='email', placeholder='Your email', type='email')
                            .col-lg-6.col-md-6
                                .input-style.mb-20
                                    input.font-sm.color-text-paragraph-2(name='phone', placeholder='Phone number', type='tel')
                            .col-lg-12.col-md-12
                                .textarea-style.mb-30
                                    textarea.font-sm.color-text-paragraph-2(name='message', placeholder='Tell us about yourself')
                                button.submit.btn.btn-send-message(type='submit') Send message
                                label.ml-20
                                    input.float-start.mr-5.mt-6(type='checkbox')
                                    |  By clicking contact us button, you agree our terms and policy,
                    p.form-messege
                .col-lg-4.text-center.d-none.d-lg-block
                    img(src='assets/imgs/page/contact/img.png', alt='joxBox')

    include ../sections/our-team.pug
    section.section-box.mt-50.mb-50
        .container
            .text-start
                h2.section-title.mb-10.wow.animate__animated.animate__fadeInUp News and Blog
                p.font-lg.color-text-paragraph-2.wow.animate__animated.animate__fadeInUp Get the latest news, updates and tips
        include ../sections/blog-slider.pug
    include ../sections/testimonials-slider.pug
    include ../sections/newsletter.pug